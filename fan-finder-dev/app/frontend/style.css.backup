/* frontend/style.css - Original Fan Finder Design */

/* Payment Tracker Styles */
.payment-tracker {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 20px;
    border: 1px solid #dee2e6;
}

.progress-steps {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    position: relative;
}

.progress-steps::before {
    content: '';
    position: absolute;
    top: 20px;
    left: 10%;
    right: 10%;
    height: 2px;
    background: #dee2e6;
    z-index: 1;
}

.step {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    flex: 1;
    position: relative;
    z-index: 2;
}

.step-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #dee2e6;
    color: #6c757d;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 8px;
    transition: all 0.3s ease;
}

.step.active .step-icon {
    background: #ff6b35;
    color: white;
    transform: scale(1.1);
}

.step-text {
    font-size: 0.8rem;
    color: #6c757d;
    font-weight: 500;
    max-width: 80px;
}

.step.active .step-text {
    color: #ff6b35;
    font-weight: 600;
}

.status-message {
    text-align: center;
    padding: 10px;
    background: white;
    border-radius: 6px;
    font-weight: 500;
    color: #495057;
}

/* Payment Details Enhancements */
.payment-item {
    display: flex;
    justify-content: space-between;
    padding: 8px 0;
    border-bottom: 1px solid #e9ecef;
}

.payment-item:last-child {
    border-bottom: none;
}

.payment-label {
    font-weight: 600;
    color: #495057;
}

.payment-value {
    font-family: 'Courier New', monospace;
    background: #f8f9fa;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.9em;
}

/* Alert styling for smart payment detection - Orange theme */
.alert-info {
    background-color: #fff3e0;
    border-color: #ffcc80;
    color: #e65100;
}

/* Orange primary buttons */
.btn-primary {
    background-color: #ff6b35;
    border-color: #ff6b35;
    color: white;
}

.btn-primary:hover {
    background-color: #e55a2e;
    border-color: #e55a2e;
}

.btn-primary:focus,
.btn-primary.focus {
    box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
}

.btn-primary:not(:disabled):not(.disabled):active,
.btn-primary:not(:disabled):not(.disabled).active {
    background-color: #d44f28;
    border-color: #d44f28;
}

/* Override Bootstrap info colors to match orange theme */
.bg-info {
    background-color: #ff6b35 !important;
}

.text-info {
    color: #ff6b35 !important;
}

.border-info {
    border-color: #ff6b35 !important;
}

.btn-info {
    background-color: #ff6b35;
    border-color: #ff6b35;
    color: white;
}

.btn-info:hover {
    background-color: #e55a2e;
    border-color: #e55a2e;
}

/* Progress bar orange styling */
.progress-bar.bg-primary {
    background-color: #ff6b35 !important;
}

/* Payment Pending State Styling */
.payment-pending {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 20px;
    border: 1px solid #dee2e6;
    margin-bottom: 20px;
}

.pending-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
    border-bottom: 1px solid #e9ecef;
}

.pending-item:last-child {
    border-bottom: none;
}

.pending-label {
    font-weight: 500;
    color: #495057;
}

/* Warning alert styling */
.alert-warning {
    background-color: #fff8e1;
    border-color: #ffecb3;
    color: #e65100;
}

.alert-warning .fas {
    color: #ff9800;
}

/* Status badges */
.badge.bg-success {
    background-color: #28a745 !important;
}

.badge.bg-warning {
    background-color: #ffc107 !important;
    color: #212529;
}

/* Orange navbar to match original */
.navbar.bg-primary {
    background-color: #ff6b35 !important;
}

/* System Status styling to match original */
.bg-dark {
    background-color: #343a40 !important;
}

/* System Status card body - light gray background */
.card-body {
    background-color: #f8f9fa !important;
}

/* Orange border under the dark System Status header - thinner */
.card-header.bg-dark {
    border-bottom: 1px solid #ff6b35 !important;
}

/* Remove default card borders to clean up appearance */
.card {
    border: 1px solid #dee2e6 !important;
}

/* Orange active tab styling - exact match */
.nav-tabs .nav-link.active {
    background-color: #ff6b35 !important;
    color: white !important;
    border-color: #ff6b35 !important;
    border-bottom-color: transparent !important;
}

/* Fix active tab hover to keep white text visible */
.nav-tabs .nav-link.active:hover {
    background-color: #ff6b35 !important;
    color: white !important;
    border-color: #ff6b35 !important;
}

/* Inactive tab styling */
.nav-tabs .nav-link {
    color: #6c757d !important;
    background-color: transparent !important;
    border-color: transparent !important;
}

/* Inactive tab hover */
.nav-tabs .nav-link:hover {
    color: #ff6b35 !important;
    border-color: transparent !important;
    background-color: transparent !important;
}

/* Orange toggle switch */
.form-check-input:checked {
    background-color: #ff6b35 !important;
    border-color: #ff6b35 !important;
}

/* Fix light blue text-primary to orange */
.text-primary {
    color: #ff6b35 !important;
}

/* Fix blue badges to orange */
.badge.bg-primary {
    background-color: #ff6b35 !important;
}

/* Status indicators */
.status-indicator {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    display: inline-block;
    margin-right: 5px;
}

.status-ready { 
    background-color: #28a745; 
}

.status-running { 
    background-color: #ffc107;
    animation: pulse 1.5s infinite;
}

.status-stopped { 
    background-color: #dc3545; 
}

@keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.5; }
    100% { opacity: 1; }
}

/* Progress bars */
.progress {
    height: 20px;
}

.progress-bar.running {
    animation: progress-animation 2s linear infinite;
}

@keyframes progress-animation {
    0% { background-position: 0 0; }
    100% { background-position: 40px 40px; }
}

/* Connection Status (hidden by default) */
.connection-status.connected {
    background-color: #28a745 !important;
    color: white;
}

.connection-status.disconnected {
    background-color: #dc3545 !important;
    color: white;
}